@using PagedList.Mvc
@model PagedList.IPagedList<WebApplication1.Models.tbl_category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View Category</title>
    @*<link href="~/Content/paginition.css" rel="stylesheet" />*@
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #6c757c;
            color: #343a40;
        }

        .container {
            margin-top: 15px;
            background-color: #000000;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .header {
            height: 100%;
            border: 1px solid #dee3e6;
            overflow: hidden;
            border-radius: 10px;
        }

        header img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .category-card {
            height: 350px;
            margin-top: 15px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .category-card img {
                width: 100%;
                height: 60%;
                object-fit: cover;
                border-radius: 10px 10px 0 0;
            }

            .category-card h4 {
                color: #dee3e6;
                font-family: 'Arial Rounded MT';
                text-align: center;
                margin-top: 10px;
            }

        .delete-btn {
            margin-left: auto;
            margin-right: auto;
            display: block;
            margin-top: 10px;
        }

        .pagination-container {
            margin-top: 20px;
            display: flex;
            justify-content: center;
        }

        .row{
            display:grid;
            grid-template-columns:33% 33% 33%;
            grid-gap:10px;
        }
    </style>
</head>
<body>
    <div class="container">
        @*<div class="header">
            <img src="https://images.unsplash.com/photo-1615715757401-f30e7b27b912?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTF8fHdoaXRlJTIwJTIwYmFja2dyb3VuZHxlbnwwfHwwfHx8MA%3D%3D" style="width:100%; height:100%" />
        </div>*@
        <div class="row">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="abc">
                        <div class="in-card">
                            <img src="@Url.Content(item.ct_image)" alt="Category Image">

                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div class="pagination-container">
    </div>
</body>
</html>
