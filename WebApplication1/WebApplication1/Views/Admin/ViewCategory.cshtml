@using PagedList.Mvc
@model PagedList.IPagedList<WebApplication1.Models.tbl_category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View Category</title>
    @*<link href="~/Content/paginition.css" rel="stylesheet" />*@
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #000000;
            color: #343a40;
            /*background-image: url("https://images.unsplash.com/photo-1615715757401-f30e7b27b912?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTF8fHdoaXRlJTIwJTIwYmFja2dyb3VuZHxlbnwwfHwwfHx8MA%3D%3D");*/
            margin-top: 80px;
            }
        .container {
            /*margin-top: 15px;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);*/
            max-width: 1200px;
            margin: 0 auto;
        }
        

        .abc {
            flex: 0 0 calc(33.3333% - 20px);
            margin-bottom: 20px;
        }

        .category-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
        }

        .category-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .category-card {
            height: 350px;
            margin-top: 15px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .category-card img {
            width: 90%;
            height: 75%;
            object-fit: cover;
            /*border-radius: 10px 10px 0 0;*/
        }

        .category-card h4 {
            color: #dee3e6;
            font-family: 'Arial Rounded MT';
            text-align: center;
            margin-top: 10px;
            font-size: 16px;
        }

        .delete-btn {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 10px;
        }

        .delete-btn a {
            text-decoration: none;
            display: inline-block;
            padding: 8px 16px; 
            background-color: #dc3545; 
            color: #fff;
            border: 1px solid #dc3545;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }
        
        .delete-btn a:hover {
            background-color: #c82333;
        }
        .pagination-container {
            margin-top: 20px;
            display: flex;
            justify-content: center;
        }
        .row{
            display:grid;
            grid-template-columns:32% 32% 32%;
            gap:20px;
        }
        </style>
    </head>
<body>
    <div class="container">
        <div class="row">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                   <div class="abc">
                       <div class="category-card">
                       <img src="@Url.Content(item.ct_image)" alt="Category Image">
                       <h4>@item.ct_name</h4>
                       <div class="delete-btn">
                           @Html.ActionLink("Delete", "Delete", new {id = item.ct_id}, new { @class = "" })
                       </div>
                       </div>
                   </div>
                }
            }
        </div>
    </div>

    <div class="pagination-container">
    @*<div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.Pagecount < Model.PagenNumber ? 0 : Model.PageNumber)
            of (@Model.PageCount  @Html.PagedListPager(Model, Page => Url.Action("Index", new {page }))
        </div>*@
     </div>
</body>
</html>
